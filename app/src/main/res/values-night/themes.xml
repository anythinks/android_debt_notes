<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_primary70</item>
        <item name="colorPrimaryContainer">@color/material_dynamic_primary30</item>
        <item name="colorOnPrimary">@color/material_dynamic_primary20</item>
        <item name="colorOnPrimaryContainer">@color/material_dynamic_primary90</item>
        <item name="android:textColorPrimary">@color/material_dynamic_primary99</item>
        <item name="colorPrimaryInverse">@color/material_dynamic_primary40</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_secondary70</item>
        <item name="colorSecondaryContainer">@color/material_dynamic_secondary30</item>
        <item name="colorOnSecondary">@color/material_dynamic_secondary20</item>
        <item name="colorOnSecondaryContainer">@color/material_dynamic_secondary90</item>
        <item name="android:textColorSecondary">@color/material_dynamic_secondary99</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/material_dynamic_tertiary80</item>
        <item name="colorTertiaryContainer">@color/material_dynamic_tertiary30</item>
        <item name="colorOnTertiary">@color/material_dynamic_tertiary20</item>
        <item name="colorOnTertiaryContainer">@color/material_dynamic_tertiary90</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/material_dynamic_neutral10</item>
        <item name="android:navigationBarColor">@color/material_dynamic_neutral10</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/material_dynamic_neutral90</item>
        <item name="colorControlNormal">@color/material_dynamic_primary99</item>
    </style>

    <style name="homeBG">
        <item name="android:background">@color/material_dynamic_neutral10</item>
    </style>

    <style name="NavigationView">
        <item name="android:background">@color/material_dynamic_neutral_variant20</item>
        <item name="itemTextColor">@color/material_dynamic_primary99</item>
        <item name="itemIconTint">@color/material_dynamic_primary99</item>
    </style>

    <style name="cardBG">
        <item name="cardBackgroundColor">@color/material_dynamic_neutral_variant20</item>
    </style>

    <style name="toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/material_dynamic_neutral10</item>
    </style>

    <style name="recycler_text">
        <item name="android:textColor">@color/material_dynamic_neutral95</item>
    </style>

    <style name="navheaderTextColor">
        <item name="android:textColor">@color/material_dynamic_primary99</item>
    </style>

</resources>